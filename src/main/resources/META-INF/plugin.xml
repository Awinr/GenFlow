<idea-plugin>
    <vendor email="1623859508@qq.com">itaaron</vendor>
    <id>JavaFlowDiagram</id>

    <name>JavaFlowDiagram</name>
    <description><![CDATA[
<h3>JavaFlowDiagram for IntelliJ IDEA</h3>
<p>with this plugin, you can<br>
+ generate Simple flow Diagram.<br>
+ Select whether to add the common method by setting<br>
+ Export the diagram as image.<br>
+ Export the diagram as image.<br>
]]></description>
    <version>1.2.2</version>
    <idea-version since-build="231.*"/>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <!-- 右边侧边栏 -->
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="PlantUMLToolWindow"
                    anchor="right"
                    canCloseContents="true"
                    icon="/icons/gencodeflow.svg"
                    factoryClass="com.it.aaron.gencodeflow.window.PlantUMLToolWindowFactory"
        />
    </extensions>
    <!-- 右键弹出菜单 -->
    <actions>
        <action id="GenAPIDocAction" class="com.it.aaron.gencodeflow.action.JavaFlowDiagramAction"
                icon="/icons/gencodeflow.svg"
                text="FlowDiagram">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

    </actions>
</idea-plugin>